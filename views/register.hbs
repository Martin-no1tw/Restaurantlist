<div class="container">
  <h1 class="mt-4">Account Register</h1>
  {{>message}}
  <form action="/users/register" method="POST">
    <div class="form-group row mt-3">
      <input type="text" placeholder="Name" id="name" name="name" class="form-control" value="{{ name }}">
    </div>

    <div class="form-group row">
      <input type="email" placeholder="Email" id="email" name="email" class="form-control" value="{{ email }}" required>
    </div>

    <div class="form-group row">
      <input type="password" placeholder="Password" id="password" name="password" class="form-control"
        value="{{ password }}" required>
    </div>

    <div class="form-group row">
      <input type="password" placeholder="Confirm Password" name="confirmPassword" id="confirmPassword"
        class="form-control" value="{{ confirmPassword }}" required>
    </div>

    <div class="input-group-append d-md-flex justify-content-md-end">
      <button type="submit" class="btn btn-secondary" role="button" aria-pressed="true">Register</button>
    </div>
    <div class="input-group-append d-md-flex justify-content-md-end mt-3">
      <a href="/auth/facebook" class="btn btn-warning" aria-pressed="true">Facebook Login</a>
    </div>
  </form>
  <p class="lead mt-4">
    Have An Account? <a href="/users/login">Login</a>
  </p>
</div>