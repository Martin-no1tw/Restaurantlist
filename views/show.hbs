<h1 class="mb-1 restaurant-show-title">{{show_result.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-5">
        {{show_result.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{show_result.image}}" alt="{{show_result.name}}"
        style="max-width: 600px;">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{show_result.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{show_result.location}}
        <a href="https://goo.gl/maps/V9mKwVJ4s5v" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{show_result.phone}}
      </p>
    </div>
  </div>
</div>