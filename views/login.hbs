<div class="container">
  <h1 class="mt-4">Account Login</h1>
  {{>message}}
  <form action="/users/login" method="POST">
    <div class="form-group row mt-3">
      <input type="text" placeholder="Email" name="email" class="form-control" required>
    </div>

    <div class="form-group row">
      <input type="password" placeholder="Password" name="password" class="form-control" required>
    </div>

    <div class="input-group-append d-md-flex justify-content-md-end">
      <button type="submit" class="btn btn-secondary" role="button" aria-pressed="true">Sign in</button>
    </div>
    <div class="input-group-append d-md-flex justify-content-md-end mt-3">
      <a href="/auth/facebook" class="btn btn-warning" aria-pressed="true">Facebook Login</a>
    </div>
  </form>
  <p class="lead mt-4">
    No Account? <a href="/users/register">Register</a>
  </p>
</div>